@model IEnumerable<GestionProductosClientes.ViewModels.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1 class="mb-4">Gestión de Productos</h1>

<!-- Búsqueda por ID -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-primary text-white">Buscar producto</div>
    <div class="card-body">
        <form id="searchForm" class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="searchId" class="col-form-label">ID:</label>
            </div>
            <div class="col-auto">
                <input type="number" min="1" class="form-control" id="searchId" placeholder="Ej. 3" />
            </div>
            <div class="col-auto">
                <button id="btnSearch" class="btn btn-primary">Buscar</button>
                <button id="btnReset" class="btn btn-secondary">Mostrar todos</button>
            </div>
            <div class="col-12 mt-2" id="searchMessage"></div>
        </form>
    </div>
</div>

<div id="loading" style="display:none;" class="mb-3">
    <div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>
    <span class="ms-2">Buscando...</span>
</div>

<table id="productsTable" class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Existencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Existencia</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<!-- Formulario crear producto -->
<div class="card shadow-sm mt-4">
    <div class="card-header bg-success text-white">Crear nuevo producto</div>
    <div class="card-body">
        <form id="createForm" novalidate>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="nombre" class="form-label">Nombre *</label>
                    <input type="text" id="nombre" class="form-control" maxlength="100" />
                    <div class="invalid-feedback" data-valmsg-for="Nombre"></div>
                </div>
                <div class="col-md-6">
                    <label for="precio" class="form-label">Precio *</label>
                    <input type="number" id="precio" class="form-control" min="0" step="0.01" />
                    <div class="invalid-feedback" data-valmsg-for="Precio"></div>
                </div>
                <div class="col-md-6">
                    <label for="existencia" class="form-label">Existencia *</label>
                    <input type="number" id="existencia" class="form-control" min="0" />
                    <div class="invalid-feedback" data-valmsg-for="Existencia"></div>
                </div>
                <div class="col-md-6">
                    <label for="idMarca" class="form-label">Id de Marca *</label>
                    <input type="number" id="idMarca" class="form-control" min="1" />
                    <div class="invalid-feedback" data-valmsg-for="IdMarca"></div>
                </div>
                <div class="col-12">
                    <label for="descripcion" class="form-label">Descripción</label>
                    <textarea id="descripcion" class="form-control" maxlength="500"></textarea>
                    <div class="invalid-feedback" data-valmsg-for="Descripcion"></div>
                </div>
                <div class="col-12 mt-3">
                    <button id="btnCreate" class="btn btn-success">Guardar</button>
                    <span id="createMessage" class="ms-3"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {

            
            var fieldMap = {
                "Nombre": "#nombre",
                "Descripcion": "#descripcion",
                "Precio": "#precio",
                "Existencia": "#existencia",
                "IdMarca": "#idMarca"
            };

            function clearFieldErrors() {
                $.each(fieldMap, function (prop, selector) {
                    $(selector).removeClass('is-invalid');
                    $('div.invalid-feedback[data-valmsg-for="' + prop + '"]').text('');
                });
            }

            function showFieldErrors(errors) {
                clearFieldErrors();
                if (!errors) return;

                Object.keys(errors).forEach(function (key) {
                    var msgs = errors[key];
                    var selector = fieldMap[key];
                    if (selector) {
                        $(selector).addClass('is-invalid');
                        $('div.invalid-feedback[data-valmsg-for="' + key + '"]').text(msgs.join(', '));
                    } else {
                        $('#createMessage').append('<div class="alert alert-warning mt-2">' + key + ': ' + msgs.join(', ') + '</div>');
                    }
                });
            }

            /*BUSQUEDA*/
            function showMessage(msg, type) {
                var html = '<div class="alert alert-' + (type || 'info') + ' mt-2">' + msg + '</div>';
                $('#searchMessage').html(html);
            }

            $('#btnSearch').on('click', function (e) {
                e.preventDefault();
                var id = $('#searchId').val();

                if (!id || !/^[0-9]+$/.test(id)) {
                    showMessage('Por favor ingresa un ID numérico válido.', 'warning');
                    return;
                }

                $('#btnSearch').prop('disabled', true);
                $('#loading').show();
                $('#searchMessage').empty();

                $.ajax({
                    url: '@Url.Action("SearchById", "Productos")',
                    method: 'GET',
                    data: { id: id },
                    dataType: 'json'
                })
                    .done(function (response) {
                        if (response && response.success) {
                            var p = response.data;
                            var row = '<tr>' +
                                '<td>' + p.id + '</td>' +
                                '<td>' + p.nombre + '</td>' +
                                '<td>' + (p.descripcion || '') + '</td>' +
                                '<td>' + p.precio + '</td>' +
                                '<td>' + p.existencia + '</td>' +
                                '</tr>';
                            $('#productsTable tbody').html(row);
                            showMessage('Producto encontrado.', 'success');
                        } else {
                            $('#productsTable tbody').empty();
                            showMessage(response.message, 'info');
                        }
                    })
                    .fail(function () {
                        showMessage('Error al realizar la búsqueda.', 'danger');
                    })
                    .always(function () {
                        $('#loading').hide();
                        $('#btnSearch').prop('disabled', false);
                    });
            });

            $('#btnReset').on('click', function (e) {
                e.preventDefault();
                window.location.reload();
            });

            /*CREACIÓN */

            // limpiar errores cuando el usuario escribe
            $('#createForm input, #createForm textarea').on('input change', function () {
                var id = $(this).attr('id');
                $(this).removeClass('is-invalid');
                var prop = Object.keys(fieldMap).find(k => fieldMap[k] === '#' + id);
                if (prop) $('div.invalid-feedback[data-valmsg-for="' + prop + '"]').text('');
                $('#createMessage').empty();
            });

            $('#createForm').on('submit', function (e) {
                e.preventDefault();
                clearFieldErrors();
                $('#createMessage').empty();

                var producto = {
                    Nombre: $('#nombre').val().trim(),
                    Descripcion: $('#descripcion').val().trim(),
                    Precio: parseFloat($('#precio').val()) || 0,
                    Existencia: parseInt($('#existencia').val()) || 0,
                    IdMarca: parseInt($('#idMarca').val()) || 0
                };

                // Validación cliente
                var clientErrors = [];
                if (!producto.Nombre) clientErrors.push('Nombre es obligatorio.');
                if (producto.Precio < 0) clientErrors.push('Precio inválido.');
                if (producto.Existencia < 0) clientErrors.push('Existencia inválida.');
                if (producto.IdMarca <= 0) clientErrors.push('IdMarca inválido.');

                if (clientErrors.length) {
                    $('#createMessage').html('<div class="alert alert-warning mt-2">' + clientErrors.join(' ') + '</div>');
                    return;
                }

                $('#btnCreate').prop('disabled', true);
                $('#createMessage').html('<div class="text-info">Guardando producto...</div>');

                $.ajax({
                    url: '@Url.Action("Create", "Productos")',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(producto),
                    dataType: 'json'
                })
                    .done(function (response) {
                        if (response.success) {
                            $('#createMessage').html('<div class="alert alert-success mt-2">' + response.message + '</div>');

                            var p = response.data;
                            var row = '<tr>' +
                                '<td>' + p.id + '</td>' +
                                '<td>' + p.nombre + '</td>' +
                                '<td>' + (p.descripcion || '') + '</td>' +
                                '<td>' + p.precio + '</td>' +
                                '<td>' + p.existencia + '</td>' +
                                '</tr>';
                            $('#productsTable tbody').append(row);
                            $('#createForm')[0].reset();
                        } else {
                            if (response.errors) {
                                showFieldErrors(response.errors);
                                if (response.message) $('#createMessage').append('<div class="alert alert-danger mt-2">' + response.message + '</div>');
                            } else {
                                var err = response.message || 'Error al crear el producto.';
                                $('#createMessage').html('<div class="alert alert-danger mt-2">' + err + '</div>');
                            }
                        }
                    })
                    .fail(function (xhr) {
                        $('#createMessage').html('<div class="alert alert-danger mt-2">Error al crear el producto.</div>');
                    })
                    .always(function () {
                        $('#btnCreate').prop('disabled', false);
                    });
            });
        });
    </script>
}
