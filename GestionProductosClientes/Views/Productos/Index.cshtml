@model IEnumerable<GestionProductosClientes.ViewModels.ProductoViewModel>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>


<div class="card mb-3">
    <div class="card-body">
        <form id="searchForm" class="row g-2 align-items-center">
            <div class="col-auto">
                <label for="searchId" class="col-form-label">Buscar por ID:</label>
            </div>
            <div class="col-auto">
                <input type="number" min="1" class="form-control" id="searchId" placeholder="Ingresa el ID" />
            </div>
            <div class="col-auto">
                <button id="btnSearch" class="btn btn-primary">Buscar</button>
                <button id="btnReset" class="btn btn-secondary">Mostrar todos</button>
            </div>
            <div class="col-12 mt-2" id="searchMessage"></div>
        </form>
    </div>
</div>


<div id="loading" style="display:none;" class="mb-2">
    <div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div>
    <span class="ms-2">Buscando...</span>
</div>


<table id="productsTable" class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Existencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio.ToString("C")</td>
                <td>@item.Existencia</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {

            //Función para mostrar mensajes dinámicos
            function showMessage(msg, type) {
                var html = '<div class="alert alert-' + (type || 'info') + ' mt-2">' + msg + '</div>';
                $('#searchMessage').html(html);
            }

            //Botón Buscar
            $('#btnSearch').on('click', function (e) {
                e.preventDefault();
                var id = $('#searchId').val();

                // Validación cliente
                if (!id || !/^[0-9]+$/.test(id)) {
                    showMessage('Por favor ingresa un ID numérico válido.', 'warning');
                    return;
                }

                $('#btnSearch').prop('disabled', true);
                $('#loading').show();
                $('#searchMessage').empty();

                //Petición AJAX al controlador
                $.ajax({
                    url: '@Url.Action("SearchById", "Productos")',
                    method: 'GET',
                    data: { id: id },
                    dataType: 'json'
                })
                .done(function (response) {
                    if (response && response.success) {
                        //Producto encontrado
                        var p = response.product;
                        var row = '<tr>' +
                            '<td>' + p.id + '</td>' +
                            '<td>' + p.nombre + '</td>' +
                            '<td>' + p.descripcion + '</td>' +
                            '<td>' + p.precio + '</td>' +
                            '<td>' + p.existencia + '</td>' +
                            '</tr>';
                        $('table#productsTable tbody').html(row);
                        showMessage('Producto encontrado.', 'success');
                    } else {
                        //Producto no encontrado
                        $('table#productsTable tbody').empty();
                        showMessage(response.message, 'info');
                    }
                })
                .fail(function () {
                    showMessage('Error al realizar la búsqueda.', 'danger');
                })
                .always(function () {
                    $('#loading').hide();
                    $('#btnSearch').prop('disabled', false);
                });
            });

            //Botón para restaurar la vista completa
            $('#btnReset').on('click', function (e) {
                e.preventDefault();
                window.location.reload();
            });
        });
    </script>
}
